function eatlas_map_field_update_7004(&$sandbox) {
	$schema = drupal_get_schema(EATLAS_MAP_FIELD_DB_TABLE_MAP_CONFIG);
	if (!db_field_exists(EATLAS_MAP_FIELD_DB_TABLE_MAP_CONFIG, 'aspect_ratio')) {
