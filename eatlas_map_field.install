function eatlas_map_field_update_7003(&$sandbox) {
	$schema = drupal_get_schema(EATLAS_MAP_FIELD_DB_TABLE_MAP_CONFIG);
	if (!db_field_exists(EATLAS_MAP_FIELD_DB_TABLE_MAP_CONFIG, 'style')) {
